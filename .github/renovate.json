{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        ":dependencyDashboard",
        ":gitSignOff",
        ":semanticCommitScopeDisabled",
        "github>aquaproj/aqua-renovate-config#1.12.0"
    ],
    "prHeader": "Update Request | Renovate Bot",
    "prHourlyLimit": 0,
    "prConcurrentLimit": 0,
    "branchConcurrentLimit": 0,
    "enabledManagers": [
        "regex"
    ],
    "packageRules": [
        {
            "matchPackagePatterns": [
                "*"
            ],
	    "matchUpdateTypes": [
                "major",
                "minor",
                "patch",
                "pin",
                "pinDigest",
                "digest",
                "lockFileMaintenance",
                "rollback",
                "bump",
                "replacement"
            ],
            "groupName": "releases"
        }
    ]
}
